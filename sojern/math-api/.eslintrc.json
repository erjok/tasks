{
    "env": {
        "browser": true,
        "es2021": true,
        "mocha": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "arrow-parens": ["error", "as-needed"],
        "func-names": ["error", "never"],
        "implicit-arrow-linebreak": ["error", "always"],
        "import/extensions": ["error", "ignorePackages"],
        "indent": ["error", 4],
        "lines-between-class-members": ["error", "always", { "exceptAfterSingleLine": true }],
        "no-console": "off"
    }
}
